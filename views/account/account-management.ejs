   <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
    } 
%>
     <%- messages() %>

       <% if (locals.user.account_firstname) { %>
        <h2>Welcome <%= locals.user.account_firstname %></h2>
      <% } %>
     
    <div class="content">
        <div class="card">
            <div class="box-featured">
                
                <ul class="items">
                    <% if(locals.user.account_type == "Admin" || locals.user.account_type == "Employee") { %>
                        <li><a href="/inv">Inventory Management</a></li>
                    <% } %>
                    <li><a href="/account/update/<%= locals.user.account_id %>">Update Account Information</a></li>
                    
                   
                </ul>
                
            </div>
        </div>
        
        
    </div>
</div>

